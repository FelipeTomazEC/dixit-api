{
  "name": "dixit-api",
  "version": "1.0.0",
  "description": "Backend for the dixit game",
  "main": "build/server.js",
  "author": "FelipeTomazEC",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "jest --verbose",
    "lint": "tsc && eslint \"src/**\" \"test/**\" --fix && prettier -w src test",
    "build": "babel ./src --out-dir build --extensions \".ts\"",
    "prepare": "husky install",
    "start": "node -r dotenv/config build/server.js",
    "dev": "nodemon --watch 'src/' --exec 'ts-node -r dotenv/config -r tsconfig-paths/register src/server.ts' -e ts"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier -w"
    ]
  },
  "dependencies": {
    "@babel/runtime": "^7.16.7",
    "dotenv": "^16.0.0",
    "express": "^4.17.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.12",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.16.10",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/express": "^4.17.13",
    "@types/faker": "5.5.9",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^8.7.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "faker": "5.5.3",
    "husky": "^7.0.0",
    "jest": "^27.4.7",
    "lint-staged": "^12.3.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "tsconfig-paths-jest": "^0.0.1",
    "typescript": "^4.5.5"
  }
}
